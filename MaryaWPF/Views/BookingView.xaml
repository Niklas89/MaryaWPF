        <DataGrid Cursor="Hand"  x:Name="Bookings" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" AlternatingRowBackground = "LightBlue" 
                 AlternationCount = "2" AutoGenerateColumns = "False" IsReadOnly="True"  SelectedItem="SelectedBooking">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Date" Binding = "{Binding AppointmentDate, StringFormat=g, ConverterCulture=fr-FR}" />
                <DataGridTextColumn Header = "Nombre d'heures" Binding = "{Binding NbHours}" />
                <!-- <DataGridTextColumn Header = "Description" Binding = "{Binding Description}" /> A mettre dans BookingDetailsView-->
                <DataGridTextColumn Header = "Service" Binding = "{Binding ServiceName}" />
                <DataGridTextColumn Header = "Client" Binding = "{Binding ClientFullName}" />
                <DataGridTextColumn Header = "Partenaire" Binding = "{Binding PartnerFullName}" />
                <DataGridTextColumn Header = "Prix" Binding = "{Binding TotalPrice, ConverterCulture='fr-FR', StringFormat='{}{0:C}'}" />
                <DataGridTextColumn Header = "Accepté" Binding = "{Binding AcceptedYesNo}" />
                <DataGridTextColumn Header = "Annulé" Binding = "{Binding IsCancelledYesNo}" />
                <DataGridTextColumn Header = "Réalisé" Binding = "{Binding ServiceDoneYesNo}" />
                <DataGridTextColumn Header = "Payé" Binding = "{Binding IsPaidYesNo}" />
                <!--<DataGridTemplateColumn Header="View">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="ViewBookingDetails" Content="View" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Height="100" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Cursor="">
            <materialDesign:PackIcon Margin="0 25 10 0" Foreground="{DynamicResource PrimaryHueDarkBrush}"  Width="40" Height="40" Kind="CashRefund" Cursor="" />
            <materialDesign:Card Width="400"
                                 Height="50"
                                 Padding="0 15 0 0"
                             Background="{DynamicResource PrimaryHueDarkBrush}"
                             Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                             UniformCornerRadius="6">
                <TextBlock TextAlignment="Center" FontSize="16">
                <Hyperlink NavigateUri="https://dashboard.stripe.com/test/payments" RequestNavigate="Hyperlink_RequestNavigate">
                    Rembourser les réservations en attente
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink"
                               BasedOn="{StaticResource {x:Type Hyperlink}}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkForegroundBrush}"/>
                            <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="LightSkyBlue" />
                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                            </Trigger>
                        </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                </Hyperlink>
                </TextBlock>
            </materialDesign:Card>
        </StackPanel>


